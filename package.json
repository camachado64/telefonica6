{
  "name": "ticket-bot",
  "version": "0.3.5",
  "description": "A Microsoft Teams bot designed to facilitate ticket creation in an external API. The bot collects information from conversations between customers and certified technicians within a shared Team, streamlining the process of generating and managing support tickets.",
  "author": "The Laude Technology Company",
  "license": "MIT",
  "engines": {
    "node": "18 || 20"
  },
  "main": "./build/index.js",
  "scripts": {
    "dev:teamsfx": "env-cmd --silent -f .localConfigs npm run start",
    "start": "node --inspect=9239 -r ts-node/register ./src/index.ts",
    "start:dummy": "node --inspect=9239 -r ts-node/register ./src/utils/client/dummy/client.ts",
    "start:watch": "nodemon --verbose --watch ./src --exec \"npm run start --signal SIGINT\"",
    "start:build": "npm run build && node ./build/index.js",
    "start:ngrok": "ngrok http 3978 --host-header=\"localhost:3978\"",
    "build": "tsc --build",
    "clean:build": "shx rm -rf build/ && shx rm -rf appPackage/build",
    "clean:deps": "shx rm -rf node_modules/",
    "clean": "npm run clean:build && npm run clean:deps",
    "tsc": "tsc",
    "shx": "shx",
    "atk:help": "atk -help",
    "atk": "atk",
    "nodemon:help": "nodemon -help",
    "shx:help": "shx help",
    "env-cmd:help": "env-cmd --help",
    "test": "echo \"Error: no tests specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/c-mmachado/telefonica-chatbot"
  },
  "dependencies": {
    "@azure/identity": "^4.6.0",
    "@azure/msal-node": "^3.8.2",
    "@microsoft/microsoft-graph-client": "^3.0.1",
    "@microsoft/teams-ai": "^1.7.4",
    "@microsoft/teamsfx": "^4.0.0",
    "adaptive-expressions": "^4.23.1",
    "adaptivecards-templating": "^2.3.1",
    "bcryptjs": "^3.0.2",
    "botbuilder": "^4.23.3",
    "botbuilder-dialogs": "^4.23.3",
    "chalk": "^4.1.2",
    "dotenv": "^16.4.7",
    "express": "^5.0.1",
    "figlet": "^1.9.4",
    "gradient-string": "^3.0.0",
    "helmet": "^8.1.0",
    "isomorphic-fetch": "^3.0.0",
    "jsonwebtoken": "^9.0.2",
    "mssql": "^11.0.1",
    "nanoid": "^3.1.19",
    "tslog": "^4.9.3",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@microsoft/m365agentstoolkit-cli": "^1.0.4",
    "@microsoft/microsoft-graph-types": "^2.40.0",
    "@types/express": "^5.0.0",
    "@types/figlet": "^1.7.0",
    "@types/gradient-string": "^1.1.6",
    "@types/json-schema": "^7.0.15",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mssql": "^9.1.6",
    "@types/node": "^18.0.0",
    "env-cmd": "^10.1.0",
    "install": "^0.13.0",
    "nodemon": "^3.1.7",
    "npm": "^11.6.3",
    "shx": "^0.3.4",
    "ts-node": "^10.4.0",
    "typescript": "^5.3.0"
  }
}
