{
    "type": "Container",
    "isVisible": "${visible}",
    "items": [
        {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "${text}"

        },
        {
            "type": "Container",
            "selectAction": {
                "type": "Action.Submit",
                "isEnabled": false,
                "associatedInputs": "auto",
                "data": {
                    "action": {
                        "verb": "selectChoiceTicket",
                        "data": {
                            "choice": "${id}",
                            "requestId": "${requestId}"
                        }
                    }
                }
            },
            "items": [
                {
                    "type": "Input.ChoiceSet",
                    "id": "${id}",
                    "placeholder": "${placeholder}",
                    "isRequired": "${required}",
                    "isMultiSelect": false,
                    "value": "",
                    "choices": []
                }
            ]
        }
    ]
}