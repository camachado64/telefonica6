{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "type": "AdaptiveCard",
    "refresh": {
        "action": {
            "fallback": "drop",
            "type": "Action.Execute",
            "verb": "authRefresh",
            "data": {
                "requestId": "${requestId}"
            }
        },
        "userIds": [
            "${userIds}"
        ]
    },
    "body": [
        {
            "type": "TextBlock",
            "text": "Prepar√°ndose para crear un nuevo ticket...",
            "wrap": true
        },
        {
            "type": "TextBlock",
            "spacing": "None",
            "text": "Espere unos momentos mientras el bot prepara el formulario de ticket.",
            "isSubtle": true,
            "wrap": true
        }
    ]
}