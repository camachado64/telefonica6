{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4",
    "body": [
        {
            "type": "TextBlock",
            "size": "ExtraLarge",
            "weight": "Bolder",
            "text": "Crear nueva incidencia",
            "style": "heading"
        },
        {
            "type": "TextBlock",
            "spacing": "None",
            "text": "Iniciado en ${gui.header.startedAt}",
            "isSubtle": true,
            "wrap": true
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto"
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "weight": "Bolder",
                            "text": "${gui.header.from.name}",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "spacing": "None",
                            "text": "${gui.header.from.email}",
                            "isSubtle": true,
                            "wrap": true
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "style": "emphasis",
            "bleed": true,
            "items": [
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "TextBlock",
                            "size": "Medium",
                            "weight": "Bolder",
                            "text": "Detalles del Equipo",
                            "id": "teamNameLabel",
                            "spacing": "None"
                        },
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": "auto",
                                    "verticalContentAlignment": "Center"
                                },
                                {
                                    "type": "Column",
                                    "width": "stretch",
                                    "verticalContentAlignment": "Center",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "id": "teamName",
                                            "text": "${gui.context.team}"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "TextBlock",
                            "size": "Medium",
                            "weight": "Bolder",
                            "text": "Canal",
                            "id": "channelLabel"
                        },
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": "auto",
                                    "verticalContentAlignment": "Center"
                                },
                                {
                                    "type": "Column",
                                    "width": "stretch",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "id": "channelName",
                                            "text": "${gui.context.channel}"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "TextBlock",
                            "size": "Medium",
                            "weight": "Bolder",
                            "text": "Hilo de Conversacion",
                            "id": "threadLabel"
                        },
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": "auto",
                                    "verticalContentAlignment": "Center",
                                    "items": []
                                },
                                {
                                    "type": "Column",
                                    "width": "stretch",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "id": "threadName",
                                            "text": "${gui.context.conversation}"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "bleed": true,
            "items": []
        },
        {
            "type": "Container",
            "isVisible": "${gui.buttons.visible}",
            "items": [
                {
                    "type": "ActionSet",
                    "actions": [
                        {
                            "type": "Action.Execute",
                            "title": "${gui.buttons.create.title}",
                            "id": "positiveTicketAction",
                            "tooltip": "${gui.buttons.create.tooltip}",
                            "style": "positive",
                            "associatedInputs": "auto",
                            "verb": "positiveTicket",
                            "isEnabled": "${gui.buttons.create.enabled}",
                            "data": {
                                "sequenceId": "${sequenceId}",
                                "gui": "${gui}"
                            }
                        },
                        {
                            "type": "Action.Execute",
                            "title": "${gui.buttons.cancel.title}",
                            "verb": "negativeTicket",
                            "isEnabled": "${gui.buttons.cancel.enabled}",
                            "id": "cancelTicketAction",
                            "associatedInputs": "None",
                            "tooltip": "${gui.buttons.cancel.tooltip}",
                            "style": "destructive",
                            "data": {
                                "sequenceId": "${sequenceId}",
                                "gui": "${gui}"
                            }
                        }
                    ]
                }
            ]
        }
    ]
}