{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4",
    "body": [
        {
            "type": "TextBlock",
            "size": "ExtraLarge",
            "weight": "Bolder",
            "text": "Crear nueva incidencia",
            "style": "heading"
        },
        {
            "type": "TextBlock",
            "spacing": "None",
            "text": "Iniciado en ${gui.header.startedAt}",
            "isSubtle": true,
            "wrap": true
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto"
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "weight": "Bolder",
                            "text": "${gui.header.from.name}",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "spacing": "None",
                            "text": "${gui.header.from.email}",
                            "isSubtle": true,
                            "wrap": true
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "style": "emphasis",
            "bleed": true,
            "items": [
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "TextBlock",
                            "size": "Medium",
                            "weight": "Bolder",
                            "text": "Detalles del Equipo",
                            "id": "teamNameLabel",
                            "spacing": "None"
                        },
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": "auto",
                                    "verticalContentAlignment": "Center"
                                },
                                {
                                    "type": "Column",
                                    "width": "stretch",
                                    "verticalContentAlignment": "Center",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "id": "teamName",
                                            "text": "${gui.context.team}"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "TextBlock",
                            "size": "Medium",
                            "weight": "Bolder",
                            "text": "Canal",
                            "id": "channelLabel"
                        },
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": "auto",
                                    "verticalContentAlignment": "Center"
                                },
                                {
                                    "type": "Column",
                                    "width": "stretch",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "id": "channelName",
                                            "text": "${gui.context.channel}"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "TextBlock",
                            "size": "Medium",
                            "weight": "Bolder",
                            "text": "Hilo de Conversacion",
                            "id": "threadLabel"
                        },
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": "auto",
                                    "verticalContentAlignment": "Center",
                                    "items": []
                                },
                                {
                                    "type": "Column",
                                    "width": "stretch",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "id": "threadName",
                                            "text": "${gui.context.conversation}"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "bleed": true,
            "items": [
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "TextBlock",
                            "size": "Medium",
                            "weight": "Bolder",
                            "text": "Estado de la incidencia",
                            "id": "ticketStateLabel"
                        },
                        {
                            "type": "Container",
                            "items": [
                                {
                                    "type": "Input.ChoiceSet",
                                    "id": "ticketStateChoiceSet",
                                    "placeholder": "Estado de la incidencia",
                                    "isRequired": true,
                                    "isMultiSelect": false,
                                    "value": "${ticket.ticketStateChoiceSet.value}",
                                    "choices": "${ticket.ticketStateChoiceSet.choices}"
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "TextBlock",
                            "size": "Medium",
                            "weight": "Bolder",
                            "text": "Cola de la incidencia",
                            "id": "ticketCategoryLabel"
                        },
                        {
                            "type": "Container",
                            "items": [
                                {
                                    "type": "Input.ChoiceSet",
                                    "id": "ticketCategoryChoiceSet",
                                    "placeholder": "Cola de la incidencia",
                                    "style": "compact",
                                    "isRequired": true,
                                    "isMultiSelect": false,
                                    "value": "${ticket.ticketCategoryChoiceSet.value}",
                                    "choices": "${ticket.ticketCategoryChoiceSet.choices}"
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "TextBlock",
                            "size": "medium",
                            "weight": "bolder",
                            "text": "Tiempo trabajado",
                            "id": "ticketTimeTakenLabel"
                        },
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": "auto",
                                    "verticalContentAlignment": "Center"
                                },
                                {
                                    "type": "Column",
                                    "width": "stretch",
                                    "verticalContentAlignment": "Center",
                                    "items": [
                                        {
                                            "type": "Input.Number",
                                            "id": "ticketTimeTakenInput",
                                            "placeholder": "Tiempo trabajado en minutos",
                                            "isRequired": true,
                                            "value": "${ticket.ticketTimeTakenInput.value}",
                                            "errorMessage": "Error Message"
                                        }
                                    ]
                                },
                                {
                                    "type": "Column",
                                    "width": "auto",
                                    "verticalContentAlignment": "Center",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "id": "ticketTimeTakenSuffixLabel",
                                            "text": "Minutos"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "TextBlock",
                            "size": "Medium",
                            "weight": "Bolder",
                            "text": "Descricion de la incidencia",
                            "id": "ticketDescriptionLabel"
                        },
                        {
                            "type": "Input.Text",
                            "placeholder": "Descricion de la incidencia",
                            "id": "ticketDescriptionInput",
                            "value": "${ticket.ticketDescriptionInput.value}",
                            "isRequired": false,
                            "isMultiline": true,
                            "maxLength": 256
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "isVisible": "${gui.buttons.visible}",
            "items": [
                {
                    "type": "ActionSet",
                    "actions": [
                        {
                            "type": "Action.Execute",
                            "title": "${gui.buttons.create.title}",
                            "id": "positiveTicketAction",
                            "tooltip": "${gui.buttons.create.tooltip}",
                            "style": "positive",
                            "associatedInputs": "auto",
                            "verb": "positiveTicket",
                            "isEnabled": "${gui.buttons.create.enabled}",
                            "data": {
                                "sequenceId": "${sequenceId}"
                            }
                        },
                        {
                            "type": "Action.Execute",
                            "title": "${gui.buttons.cancel.title}",
                            "verb": "negativeTicket",
                            "isEnabled": "${gui.buttons.cancel.enabled}",
                            "id": "cancelTicketAction",
                            "associatedInputs": "None",
                            "tooltip": "${gui.buttons.cancel.tooltip}",
                            "style": "destructive",
                            "data": {
                                "sequenceId": "${sequenceId}"
                            }
                        }
                    ]
                }
            ]
        }
    ]
}